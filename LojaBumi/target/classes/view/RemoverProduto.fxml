<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30.0" style="-fx-padding: 50; -fx-background-color: #1E293B;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lojabumi.controllers.estoque.RemoverProdutoController">
    <children>
        <!-- Título -->
        <Label alignment="CENTER" style="-fx-font-size: 50px; -fx-font-style: italic;" text="Remover Produto" textFill="WHITE" />

        <!-- Campo Buscar por Nome -->
        <VBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 25px;" text="Buscar Produto por Nome" textFill="WHITE" />
                <ChoiceBox fx:id="escolherProduto" prefWidth="400.0" style="-fx-background-color: #334155; -fx-text-fill: WHITE; -fx-font-size: 20;" />
            </children>
        </VBox>

        <!-- Botões -->
        <VBox spacing="15.0">
            <children>
                <Button fx:id="btnRemover" onAction="#removerProduto" prefWidth="200.0" style="-fx-background-color: #DC2626; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 20px; -fx-font-weight: bold;" text="Remover Produto" />
                <Button fx:id="btnVoltar" prefWidth="200.0" style="-fx-background-color: #334155; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 20px; -fx-font-weight: bold;" text="Voltar" />
            </children>
        </VBox>
    </children>
</VBox>
