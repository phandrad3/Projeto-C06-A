<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30.0" style="-fx-padding: 50; -fx-background-color: #1E293B;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lojabumi.Controllers.Estoque.AtualizarEstoqueController">
    <children>
        <!-- Título -->
        <Label alignment="CENTER" text="Atualizar Estoque" textFill="WHITE" style="-fx-font-size: 40px; -fx-font-style: italic;" />

        <!-- Campo Buscar por Nome -->
        <VBox spacing="10.0">
            <children>
                <Label text="Buscar Produto por Nome" textFill="WHITE" style="-fx-font-size: 18px;" />
                <TextField fx:id="buscarField" prefWidth="400.0" promptText="Digite o nome do produto..." style="-fx-background-color: #334155; -fx-text-fill: white; -fx-prompt-text-fill: #94A3B8; -fx-font-size: 16px;" />
            </children>
        </VBox>

        <!-- Campo Preço -->
        <VBox spacing="10.0">
            <children>
                <Label text="Novo Preço (R$)" textFill="WHITE" style="-fx-font-size: 18px;" />
                <TextField fx:id="precoField" prefWidth="400.0" promptText="Digite o novo preço..." style="-fx-background-color: #334155; -fx-text-fill: white; -fx-prompt-text-fill: #94A3B8; -fx-font-size: 16px;" />
            </children>
        </VBox>

        <!-- Campo Quantidade -->
        <VBox spacing="10.0">
            <children>
                <Label text="Nova Quantidade" textFill="WHITE" style="-fx-font-size: 18px;" />
                <TextField fx:id="quantidadeField" prefWidth="400.0" promptText="Digite a nova quantidade..." style="-fx-background-color: #334155; -fx-text-fill: white; -fx-prompt-text-fill: #94A3B8; -fx-font-size: 16px;" />
            </children>
        </VBox>

        <!-- Botões -->
        <VBox spacing="15.0">
            <children>
                <Button fx:id="btnAtualizar" onAction="#atualizarEstoque" prefWidth="200.0" style="-fx-background-color: #0EA5E9; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold;" text="Atualizar Estoque" />
                <Button fx:id="btnVoltar"  prefWidth="200.0" style="-fx-background-color: #334155; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold;" text="Voltar" />
            </children>
        </VBox>
    </children>
</VBox>